{
  "name": "noidle",
  "version": "0.0.4",
  "description": "prevents a macOS computer from going to sleep",
  "main": "./dist/index.js",
  "scripts": {
    "test": "echo 'no tests'",
    "prebuild": "npm test && rimraf dist",
    "build": "babel --ignore *.test.js --out-dir dist src",
    "prepublish": "npm run build",
    "start": "npm run build && node ./dist/index.js",
    "start:watch": "nodemon --watch src -x npm run start"
  },
  "keywords": [
    "macOS",
    "pmset",
    "noidle",
    "sleep"
  ],
  "author": "rogerbf <roger@bergfalk.nu> (http://bergfalk.nu/)",
  "license": "MIT",
  "devDependencies": {
    "babel-cli": "6.14.0",
    "babel-preset-es2015": "6.14.0",
    "nodemon": "1.10.2",
    "rimraf": "2.5.4"
  },
  "files": [
    "dist",
    "README.md"
  ],
  "eslintConfig": {
    "env": {
      "node": true
    },
    "parserOptions": {
      "ecmaVersion": 6,
      "sourceType": "module"
    }
  },
  "babel": {
    "presets": [
      "es2015"
    ]
  },
  "dependencies": {
    "watch-pid": "^1.0.0"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/rogerbf/noidle.git"
  },
  "bugs": {
    "url": "https://github.com/rogerbf/noidle/issues"
  },
  "homepage": "https://github.com/rogerbf/noidle#readme"
}
